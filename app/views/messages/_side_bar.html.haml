.sidebar
  .sidebar__top
    .sidebar__top__block
      .sidebar__top__block__left
        = current_user.name
      .sidebar__top__block__right
        = link_to  new_group_path do 
          = icon('far', 'edit' , class: 'edit' )
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog' , class: 'cog' )

  -# = link_to new_group_path do

  .sidebar__content
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .sidebar__content__group
            = group.name
          .sidebar__content__text
            = group.show_last_message