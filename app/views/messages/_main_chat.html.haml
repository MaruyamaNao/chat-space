.mainchat
  .mainchat__top
    .mainchat__top__left
      = @group.name 
      .mainchat__top__left__member
        Member :
        - @group.users.each do |user|
          = user.name
    .mainchat__top__right
      = link_to "Edit" , edit_group_path(current_user) ,class: "btn"

  .mainchat__message
    = render @messages

  .mainchat__bottom
    = form_for [@group, @message] do |f|  
      .form-input      
        = f.text_field :content, class: 'text', placeholder: 'type a message'
        = f.label :image, class: 'img' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'file'
      = f.submit 'Send', class: 'send'